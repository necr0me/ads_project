<% provide(:title, "Tags") %>
<button class="btn btn-success" style="margin-top: 10px;margin-bottom: 10px;" data-toggle="modal" data-target="#add_tag_modal">Create new tag</button>
<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>id</th>
      <th>Name</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <%= render @tags %>
  </tbody>
  <%= will_paginate %>
</table>

<div class="modal fade" id="add_tag_modal" tabindex="-1" role="dialog" aria-labelledby="add_tag_modal_label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New tag</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="modal-body">
        <div id="tag_creation_message"></div>
        <label for="tag_name_input">Name</label>
        <input id="tag_name_input" type="text" class="form-control">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="tag_add_submit">Add tag</button>
      </div>
    </div>
  </div>
</div>

<script>
    $(function (){
        $(".delete_tag_btn").on("click", function() {
            $.ajax(
                {
                    method: 'DELETE',
                    url: '/tags/'+window.event.target.dataset.tagid,
                    data: { "authenticity_token": "<%= form_authenticity_token %>"}
                }
            )
        });
    });

    $(function (){
        $("#tag_add_submit").on("click", function() {
            var tag_name = document.getElementById('tag_name_input').value;
            $.ajax(
                {
                    method: 'POST',
                    url: '/tags',
                    data: { "authenticity_token": "<%= form_authenticity_token %>", tag: {name: tag_name}}
                }
            )
        });
    });
</script>