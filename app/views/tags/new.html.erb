<% provide(:title, 'New tag') %>
<h1>New tag</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@tag) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit "Create new tag", class: "btn btn-primary", id: "signup_accept" %>
    <% end %>
  </div>
</div>
